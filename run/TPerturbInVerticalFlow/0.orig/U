{
    floor
    {
//        type            slip;
        type            fixedValue;
        value           uniform (0 $vel 0);
    }

    ceiling
    {
        type            pressureInletOutletVelocity;
        value           uniform (0 $vel 0);
//        type            slip;
//        type            fixedValue;
//        value           uniform (0 $vel 0);
    }

    fixedWalls
    {
        type            slip;
    }
}


